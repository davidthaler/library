<html>
    <head>
        <link rel="stylesheet" href="/css/bootstrap.min.css">
        <script src="/js/jquery.slim.min.js"></script>
        <script src="/js/bootstrap.min.js"></script>
        <script src="https://kit.fontawesome.com/a46d123be3.js" 
                crossorigin="anonymous"></script>
        <title>Books</title>
        <style>
            main{
                margin: 0 auto;
                width: 100%;
                max-width: 30rem;
            }
            li p{
                color: cornflowerblue;
            }
            .listTitle{
                color: #4F4F4F;
            }
        </style>
    </head>
    <body class="bg-light">
        <nav class="navbar navbar-expand-sm navbar-light" style="background-color: lightblue;">
            <span class="fas fa-2x fa-book-open mr-3"></span>
            <span class="navbar-brand">Library</span>
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarItems">
              <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarItems">
              <ul class="navbar-nav">
                <%for(let item of nav){%>
                <li class="nav-item">
                  <a class="nav-link" href="<%=item.link%>"><%= item.title%></a>
                </li>
                <%}%>
              </ul>
            </div>
          </nav>
        <main>
            <h2 class="my-4 text-center listTitle">Your Books</h4>
            <ul class="list-group">
                <%for(let book of books){%>
                <li class="list-group-item text-center">
                    <a href="/books/<%=book._id%>">
                        <p class="font-weight-bold mb-0"><%=book.title%></p> 
                        <p class="font-weight-light mb-0"><%=book.author%></p>
                    </a>
                </li>
                <%}%>
            </ul>
        </main>
    </body>
</html>